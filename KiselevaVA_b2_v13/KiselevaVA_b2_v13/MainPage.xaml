<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KiselevaVA_b2_v13.MainPage">

    <StackLayout BackgroundColor="White">
        <Label Text="Регистрация" HorizontalOptions="Center"
               HorizontalTextAlignment="Center" FontSize="36" 
               TextColor="#F461DD" Margin="0, 65, 0, 0" FontAttributes="Bold" Grid.Column="1"/>

        <StackLayout HeightRequest="519" BackgroundColor="#59E1FF" Margin="0, 41, 0, 0">

            <Label Text="Введите ваш логин и пароль" TextColor="Black" FontSize="14" Margin="55, 65, 73, 0"/>
            <Entry Placeholder="Логин" FontSize="14" Margin="56, 14, 73, 0" x:Name="loginText" PlaceholderColor="Black"/>
            <Entry Placeholder="Логин" FontSize="14" Margin="56, 14, 73, 0" x:Name="passwordText" IsPassword="True" PlaceholderColor="Black"/>
            <Button Text="Войти" TextTransform="None" Background="#1750E0" HeightRequest="70" 
                    WidthRequest="350" Margin="30, 183, 31, 0 " CornerRadius="10" 
                    TextColor="White" FontSize="24" FontAttributes="Bold" Clicked="Button_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
